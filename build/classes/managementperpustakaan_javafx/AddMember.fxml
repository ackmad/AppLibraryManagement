<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Line?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="managementperpustakaan_javafx.controller.AddMemberController">
    <children>
        <VBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <!-- Header Section -->
            <HBox styleClass="header-section" alignment="CENTER_LEFT" spacing="15">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>
                <Label styleClass="header-icon" text="👤" />
                <VBox>
                    <Label text="Tambah Anggota Baru" styleClass="header-title">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Label text="Silakan isi informasi anggota dengan lengkap" styleClass="header-subtitle"/>
                </VBox>
            </HBox>

            <!-- Main Content -->
            <VBox styleClass="content-section" spacing="30">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <!-- Form Section -->
                <GridPane hgap="30" vgap="25">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="200"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="300" prefWidth="400"/>
                    </columnConstraints>

                    <!-- Nama Section -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Nama Lengkap" styleClass="field-label"/>
                        <Label text="Masukkan nama lengkap anggota" styleClass="field-description"/>
                    </VBox>
                    <TextField fx:id="namaField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <!-- Alamat Section -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Alamat" styleClass="field-label"/>
                        <Label text="Masukkan alamat lengkap" styleClass="field-description"/>
                    </VBox>
                    <TextArea fx:id="alamatField" styleClass="form-field-area" prefRowCount="3" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <!-- Nomor HP Section -->
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <Label text="Nomor HP" styleClass="field-label"/>
                        <Label text="Format: 08xxxxxxxxxx" styleClass="field-description"/>
                    </VBox>
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <TextField fx:id="nomorHpField" styleClass="form-field"/>
                        <Label text="Contoh: 081234567890" styleClass="field-helper"/>
                    </VBox>
                </GridPane>

                <!-- Divider -->
                <Line styleClass="divider"/>

                <!-- Buttons Section -->
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="button-secondary" text="❌ Batal"/>
                    <Button fx:id="saveButton" onAction="#handleSave" styleClass="button-primary" text="✔️ Simpan"/>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
