<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="350" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="managementperpustakaan_javafx.controller.UpdateMemberController"
            stylesheets="@assets/style_pengembalian.css" >
    
    <children>
        <VBox spacing="12" alignment="CENTER">
            <padding>
                <Insets top="15" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Update Anggota" styleClass="page-title"/>

            <VBox spacing="8">
                <TextField fx:id="namaField" promptText="Nama Lengkap" styleClass="input-field"/>
                <TextField fx:id="alamatField" promptText="Alamat" styleClass="input-field"/>
                <TextField fx:id="nomorHpField" promptText="Nomor HP" styleClass="input-field"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="saveButton" text="Simpan" styleClass="action-button add-button" onAction="#handleSave"/>
                <Button text="Batal" styleClass="action-button delete-button" onAction="#handleCancel"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
