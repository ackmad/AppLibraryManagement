<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600" prefWidth="1000" styleClass="mainFxmlClass" stylesheets="@assets/style_pengembalian.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="managementperpustakaan_javafx.controller.PengembalianController">
    <children>
        <HBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <!-- Sidebar -->
            <VBox prefHeight="600.0" prefWidth="215.0" spacing="10" styleClass="sidebar">
                <padding>
                    <Insets bottom="20" left="10" right="10" top="20" />
                </padding>
                <Label styleClass="sidebar-title" text="Perpustakaan Kita" />
                <Button fx:id="dashboardBtn" maxWidth="Infinity" onAction="#handleDashboardClick" styleClass="sidebar-button" text="Dashboard" />
                <Button fx:id="manageBookBtn" maxWidth="Infinity" onAction="#handleManageBooks" styleClass="sidebar-button" text="Managemen Buku" />
                <Button fx:id="manageMemberBtn" maxWidth="Infinity" onAction="#handleManageMembers" styleClass="sidebar-button" text="Managemen Anggota" />
                <Button fx:id="manageBorrowBtn" maxWidth="Infinity" onAction="#handleManageBorrowing" styleClass="sidebar-button" text="Pinjaman" />
                <Button fx:id="manageReturnBtn" onAction="#handleManageReturn" styleClass="sidebar-button" text="Manage Return" />
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="logoutBtn" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Keluar" />
            </VBox>

            <!-- Main Content -->
            <VBox spacing="20" styleClass="main-content" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                
                <Label styleClass="page-title" text="Pengembalian Buku" />
                
                <!-- Search Section -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Cari peminjam..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" text="Cari" onAction="#handleSearch" />
                </HBox>
                
                <!-- Borrowed Books Table -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label styleClass="section-title" text="Daftar Peminjaman" />
                    <TableView fx:id="borrowedBooksTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="memberIdColumn" text="ID Anggota" prefWidth="100" />
                            <TableColumn fx:id="memberNameColumn" text="Nama Anggota" prefWidth="150" />
                            <TableColumn fx:id="bookTitleColumn" text="Judul Buku" prefWidth="200" />
                            <TableColumn fx:id="borrowDateColumn" text="Tanggal Pinjam" prefWidth="120" />
                            <TableColumn fx:id="dueDateColumn" text="Tanggal Kembali" prefWidth="120" />
                            <TableColumn fx:id="fineColumn" text="Denda" prefWidth="100" />
                        </columns>
                    </TableView>
                    
                    <!-- Return Button -->
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="returnButton" text="Kembalikan Buku" onAction="#handleReturnBook" disable="true" styleClass="return-button" />
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
