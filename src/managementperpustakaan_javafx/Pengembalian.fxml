<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@assets/pengembalian.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="managementperpustakaan_javafx.controller.PengembalianController">
    <children>
        <HBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <!-- Sidebar -->
            <VBox prefHeight="600.0" prefWidth="215.0" spacing="10" styleClass="sidebar">
                <padding>
                    <Insets bottom="20" left="10" right="10" top="20" />
                </padding>
                <Label styleClass="sidebar-title" text="Perpustakaan Kita" />
                <Button fx:id="dashboardBtn" maxWidth="Infinity" onAction="#handleDashboardClick" styleClass="sidebar-button" text="Dashboard" />
                <Button fx:id="manageBookBtn" maxWidth="Infinity" onAction="#handleManageBooks" styleClass="sidebar-button" text="Managemen Buku" />
                <Button fx:id="manageMemberBtn" maxWidth="Infinity" onAction="#handleManageMembers" styleClass="sidebar-button" text="Managemen Anggota" />
                <Button fx:id="manageBorrowBtn" maxWidth="Infinity" onAction="#handleManageBorrowing" styleClass="sidebar-button" text="Pinjaman" />
                <Button fx:id="manageReturnBtn" onAction="#handleManageReturn" styleClass="sidebar-button" text="Pengembalian" />
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="logoutBtn" maxWidth="Infinity" onAction="#handleLogout" styleClass="logout-button" text="Keluar" />
            </VBox>

            <!-- Main Content -->
            <VBox spacing="20" styleClass="main-content" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                
                <Label styleClass="dashboard-title" text="Pengembalian Buku" />
                
                <!-- Table for Return Data -->
                <TableView fx:id="returnTable" VBox.vgrow="ALWAYS" onMouseClicked="#handleTableClick">
                    <columns>
                        <TableColumn fx:id="idPengembalianColumn" text="ID Pengembalian" />
                        <TableColumn fx:id="idPeminjamanColumn" text="ID Peminjaman" />
                        <TableColumn fx:id="idAnggotaColumn" text="ID Anggota" />
                        <TableColumn fx:id="idBukuColumn" text="ID Buku" />
                        <TableColumn fx:id="tanggalPinjamColumn" text="Tanggal Pinjam" />
                        <TableColumn fx:id="tanggalJatuhTempoColumn" text="Tanggal Jatuh Tempo" />
                        <TableColumn fx:id="tanggalPengembalianColumn" text="Tanggal Pengembalian" />
                        <TableColumn fx:id="dendaColumn" text="Denda" />
                        <TableColumn fx:id="statusPengembalianColumn" text="Status Pengembalian" />
                    </columns>
                </TableView>
                
                <Button fx:id="kembalikanBtn" text="Kembalikan" onAction="#handleKembalikan" disable="true" />
            </VBox>
        </HBox>
    </children>
</AnchorPane>
